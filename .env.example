# Environment variables for Piata.ro project
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=True

# Google OAuth Credentials
# Get these from Google Cloud Console after following GOOGLE_OAUTH_SETUP.md
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Google Maps API Key
# Get this from Google Cloud Console - Enable Maps JavaScript API, Geocoding API, and Places API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# PraisonAI Settings (if using AI features)
PRAISONAI_MODEL=gpt-3.5-turbo
PRAISONAI_TEMPERATURE=0.3
OPENAI_API_KEY=your-openai-api-key-here

# Database (for production)
# DATABASE_URL=sqlite:///db.sqlite3

# Email Settings (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Production settings
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
