# Pia»õa.ro Production Environment Template
# Copy this file to .env.prod and update with your actual values

# ========================
# CORE SETTINGS
# ========================
DEBUG=False
SECRET_KEY=change-this-to-a-very-secure-random-key-in-production

# ========================
# DATABASE
# ========================
DATABASE_URL=postgresql://piata_user:piata_password@db:5432/piata_ro

# ========================
# CACHE & QUEUE
# ========================
REDIS_URL=redis://redis:6379/0

# ========================
# AI SERVICES
# ========================
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# ========================
# SECURITY
# ========================
ALLOWED_HOSTS=piata.ro,www.piata.ro,your-domain.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://piata.ro,https://www.piata.ro,https://your-domain.com

# ========================
# AZURE STORAGE (REQUIRED FOR PRODUCTION)
# ========================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER=media

# ========================
# EMAIL (RESEND.COM)
# ========================
RESEND_API_KEY=your-resend-api-key
DEFAULT_FROM_EMAIL=noreply@piata.ro
ADMIN_EMAIL=admin@piata.ro

# ========================
# PAYMENTS (STRIPE)
# ========================
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ========================
# MONITORING
# ========================
SENTRY_DSN=your-sentry-dsn-if-using

# ========================
# PERFORMANCE
# ========================
# Database connection pool size
DB_CONN_MAX_AGE=300
DB_POOL_SIZE=10

# ========================
# FEATURE FLAGS
# ========================
ENABLE_MAINTENANCE_MODE=False
ENABLE_RATE_LIMITING=True
ENABLE_ANALYTICS=True

# ========================
# ADMIN CREDENTIALS
# ========================
# It's recommended to create admin users through the interface
# rather than hardcoding credentials here
ADMIN_PASSWORD=change-this-in-production

# ========================
# EXTERNAL SERVICES
# ========================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-if-using
OPENSTREETMAP_NOMINATIM_URL=https://nominatim.openstreetmap.org

# ========================
# RATE LIMITING
# ========================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour

# ========================
# LOGGING
# ========================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# ========================
# BACKUP
# ========================
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
BACKUP_RETENTION_DAYS=30

# ========================
# SECURITY HEADERS
# ========================
# These are configured in nginx.conf but can be overridden here
HSTS_MAX_AGE=31536000
CSP_ENABLED=True

# ========================
# IMPORTANT NOTES
# ========================
# 1. Generate a secure SECRET_KEY: 
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# 2. For production, consider using Azure Key Vault or similar
#    for managing sensitive credentials
#
# 3. Regularly rotate API keys and passwords
#
# 4. Enable monitoring and alerting for all services
#
# 5. Set up proper backup and disaster recovery procedures
