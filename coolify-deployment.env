# Coolify Deployment Environment Variables for piata-ai.ro
# Copy this file to your Coolify environment variables

# Django Settings
DJANGO_SETTINGS_MODULE=settings_prod
DJANGO_SECRET_KEY=django-insecure-production-key-here-change-this
DEBUG=False

# Database Configuration for Hetzner PostgreSQL
DATABASE_URL=postgresql://piata_user:piata_password@postgres:5432/piata_ro

# Redis Configuration for Hetzner Redis
REDIS_URL=redis://redis:6379/0

# Stripe Payment Configuration
# IMPORTANT: Switch to LIVE keys in production!
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# AI/ML Services
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
DEFAULT_FROM_EMAIL=noreply@piata-ai.ro

# Domain and Security Settings
ALLOWED_HOSTS=piata-ai.ro,www.piata-ai.ro,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://piata-ai.ro,https://www.piata-ai.ro
SECURE_SSL_REDIRECT=True

# Cloud Storage (Optional - Using Hetzner storage)
# AZURE_STORAGE_ACCOUNT_NAME=piata_ai_storage
# AZURE_STORAGE_ACCOUNT_KEY=your_azure_storage_key
# AZURE_STORAGE_CONTAINER=media-files

# Optional: File Storage (local for development, cloud for production)
# STATIC_URL=https://cdn.piata-ai.ro/static/
# MEDIA_URL=https://cdn.piata-ai.ro/media/

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Cache Configuration
CACHE_URL=redis://redis:6379/1

# Monitoring
SENTRY_DSN=your_sentry_dsn_here  # Optional - for error monitoring

# MCP Agents Configuration (if running separately)
MCP_ADVERTISING_URL=http://mcp-agents:8001
MCP_SQL_URL=http://mcp-agents:8002
MCP_STOCK_URL=http://mcp-agents:8003
